{
  "name": "@observablehq/inspector",
  "version": "3.0.5",
  "license": "ISC",
  "main": "dist/inspector.js",
  "module": "src/index.js",
  "author": {
    "name": "Observable, Inc.",
    "url": "https://observablehq.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/observablehq/inspector.git"
  },
  "scripts": {
    "test": "rollup -c && jest",
    "prepublishOnly": "rollup -c && cleancss -o dist/inspector.css src/style.css",
    "postpublish": "git push && git push --tags"
  },
  "husky": {
    "hooks": {
      "pre-commit": "eslint ."
    }
  },
  "esm": {
    "mode": "all",
    "mainFields": [
      "module"
    ],
    "cjs": true
  },
  "files": [
    "src/**/*.css",
    "src/**/*.js",
    "dist/**/*.css",
    "dist/**/*.js"
  ],
  "dependencies": {
    "esm": "^3.0.84"
  },
  "devDependencies": {
    "clean-css-cli": "^4.2.1",
    "eslint": "^5.10.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "rollup": "^1.12.3",
    "rollup-plugin-node-resolve": "^5.0.0",
    "rollup-plugin-terser": "^5.0.0"
  }
}
